{
  "name": "dotless-shim",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "sfdx shane:org:delete; ./orgInit.sh",
    "reset": "echo \"sfdx force:apex:execute -f scripts/dataWipe.cls && sfdx force:apex:execute -f scripts/init.cls\"",
    "package": "sfdx shane:package2:version:bump --minor -r -c && git add sfdx-project.json && git add latestVersion.json && git commit -m 'version bump' && git push origin master"
  },
  "nodemonConfig": {
    "watch": [
      "force-app"
    ],
    "exec": "sfdx force:source:push",
    "ext": "cls,xml,json,js,trigger,cmp,css,design,svg",
    "delay": "2500"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mshanemc/dotless-shim.git.git"
  },
  "author": "Shane McLaughlin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mshanemc/dotless-shim.git/issues"
  },
  "homepage": "https://github.com/mshanemc/dotless-shim.git",
  "devDependencies": {
    "nodemon": "^1.18.3"
  }
}
